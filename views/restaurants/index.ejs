
<% include ../partials/header %>

</header>

<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <p>Recommended for You</p>
      <p>Restaurant1</p>
      <p>Restaurant2</p>
    </div>
    <div class="col-sm-8 text-left">
      <h1>Welcome</h1>
      <% restaurants.forEach(function(camp) {%>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= camp.image %>">
            <div class="caption">
              <h4><%=camp.name%></h4>
            </div>
            <p>
              <a href="/restaurants/<%= camp._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
        <% }); %>
    </div>
    <div class="col-sm-2 sidenav">
      <div class="well">
        <% if(currentUser) {%>
        <h4>User profile</h4>
        <h4><%=currentUser.username%></h4>
          <% }; %>
      </div>
    </div>
  </div>
</div>

  <% include ../partials/footer %>
